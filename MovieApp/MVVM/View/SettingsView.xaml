<UserControl x:Class="MovieApp.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#272537">

    
    <UserControl.Resources>
        <!-- Egységes label stílus -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- Alap gomb stílus -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>
    </UserControl.Resources>

    <!-- A hátteret a PrimaryBackgroundBrush dinamikus resource vagy egy fix érték biztosítja -->
    <Border BorderBrush="{Binding BorderBrush}" BorderThickness="4">
        <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="254" Margin="265,0,0,0">

                <TextBlock Text="{Binding SettingsTitle}" FontSize="32" Foreground="{DynamicResource PrimaryTextBrush}" RenderTransformOrigin="0.5,0.5">

                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.213"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <!-- Language Panel -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Language:" Style="{StaticResource LabelStyle}" Width="150"/>
                    <ComboBox Width="120"
                          SelectedValue="{Binding SelectedLanguage, Mode=TwoWay}"
                          SelectedValuePath="Content">
                        <ComboBoxItem Content="English"/>
                        <ComboBoxItem Content="Magyar"/>
                    </ComboBox>
                </StackPanel>

                <!-- Notifications Panel -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Notifications:" Style="{StaticResource LabelStyle}" Width="150"/>
                    <CheckBox IsChecked="{Binding NotificationsEnabled}" Width="20" Height="20"/>
                </StackPanel>

                <!-- Theme Selector Panel -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Theme:" Style="{StaticResource LabelStyle}" Width="150"/>
                    <ComboBox Width="120"
                          ItemsSource="{Binding AvailableThemes}"
                          SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Save Button -->
                <Button Content="{Binding SaveButtonText, TargetNullValue=Save Settings}"
                    Style="{StaticResource PrimaryButton}"
                    Width="72"
                    Command="{Binding SaveSettingsCommand}" Height="30"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
