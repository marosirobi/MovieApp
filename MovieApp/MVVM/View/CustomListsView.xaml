<UserControl x:Class="MovieApp.MVVM.ViewModel.CustomListsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="#272537">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Movie Info Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
            <Border CornerRadius="5" Width="60" Height="90">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="{Binding CurrentMovie.PrimaryImage}"/>
                </Border.Background>
            </Border>

            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                <TextBlock Text="{Binding CurrentMovie.PrimaryTitle}"
                           FontSize="14"
                           Foreground="LightGray"
                           TextWrapping="Wrap"
                           MaxWidth="300"/>

                <TextBlock Text="Add to list" 
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Create New List Section -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding NewListName, UpdateSourceTrigger=PropertyChanged}"
                         Width="305"
                         Height="30"
                         Padding="5"
                         Background="#3A3859"
                         Foreground="White"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"/>

                <Button Content="Create List"
                        Command="{Binding CreateNewListCommand}"
                        Margin="5,0,0,0"
                        MinWidth="100"
                        Height="30"
                        FontSize="14"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3A3859"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4B4870"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5,5,0,10">
                <TextBlock Text="{Binding NewListName.Length, StringFormat='{}{0}/255 characters'}"
                           Foreground="LightGray"
                           FontSize="12"/>
            </StackPanel>
        </StackPanel>

        <!-- Custom Lists Section -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding CustomLists}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.ToggleToCustomListCommand, 
                                    RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                CommandParameter="{Binding}"
                                Margin="0,0,0,0"
                                Height="40"
                                Foreground="White"
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#3A3859"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock x:Name="sign"
                                                                   Text="+"
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"
                                                                   Margin="10,0,0,5"
                                                                   FontWeight="Bold"
                                                                   Width="20"
                                                                   FontSize="24"
                                                                   Foreground="Gold"/>
                                                        <TextBlock x:Name="contentText"
                                                                   Text="{Binding list_name}"
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"
                                                                   Margin="5,0,0,0"
                                                                   FontSize="14"
                                                                   TextWrapping="WrapWithOverflow"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   MaxWidth="350"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding IsInCurrentList}" Value="True">
                                                        <Setter TargetName="sign" Property="Text" Value="✓"/>
                                                        <Setter TargetName="sign" Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#4B4870"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>