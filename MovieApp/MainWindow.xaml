<Window x:Class="MovieApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieApp"
        xmlns:viewModel="clr-namespace:MovieApp.MVVM.ViewModel"
        xmlns:views="clr-namespace:MovieApp.MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="975"
        WindowStyle="None"
        ResizeMode="CanResize" 
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                      CornerRadius="0"
                      CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource PrimaryBackgroundBrush}" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="MovieApp"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource HeaderTextBrush}"
                       FontSize="22"
                       Margin="20"/>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Home" IsChecked="True"
             Command="{Binding NavigateToHomeCommand}" />

                <!-- Other menu items here -->
            </StackPanel>

            <TextBox Width="250" Height="40"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Grid.Column="1"
                     Style="{StaticResource ModernTextBox}"/>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="5">
                <TextBlock Text="{Binding CurrentUser.username, FallbackValue='Guest'}"

                           Foreground="{DynamicResource PrimaryTextBrush}"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <Button Style="{StaticResource WindowButton}" Content="—" Click="MinimizeApp"/>
                <Button Style="{StaticResource WindowButton}" Content="❐" Click="MaximizeApp"/>
                <Button Style="{StaticResource WindowButton}" Content="X" Click="CloseApp"/>

            </StackPanel>

            <ScrollViewer Grid.Column="1" Grid.Row="1"
                          CanContentScroll="True"
                          Style="{StaticResource VerticalOnlyScrollViewer}">
                <ContentControl Margin="10"
                                Content="{Binding CurrentView}"/>
            </ScrollViewer>

            <Popup IsOpen="{Binding IsRatingDialogOpen}"
                   StaysOpen="True"
                   Placement="Center"
                   AllowsTransparency="True"
                   Panel.ZIndex="1000">
                <Border Background="#80000000" 
                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}">
                    <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                            CornerRadius="10"
                            Width="450"
                            Height="300"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Grid>
                            <views:MovieRatingView DataContext="{Binding RateMovieVM}"/>
                            <Button Content="✕"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="5"
                                    Style="{StaticResource WindowButton}"
                                    Command="{Binding CloseRatingDialogCommand}"/>
                        </Grid>
                    </Border>
                </Border>
            </Popup>
        </Grid>
    </Border>
</Window>
