<Window x:Class="MovieApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieApp"
        xmlns:viewModel="clr-namespace:MovieApp.MVVM.ViewModel"
        xmlns:utils="clr-namespace:MovieApp.Utils"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="920"
        WindowStyle="None"
        ResizeMode="CanResize" 
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <!--ResizeMode="CanResize"-->
    
    <Window.DataContext>
            <viewModel:MainViewModel/>
    </Window.DataContext>

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                  CornerRadius="0"
                  CaptionHeight="0"/>
    </WindowChrome.WindowChrome>


    <Border Background="#272537"
            CornerRadius="10">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="MovieApp"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="22"
                       Margin="20,20,20,20"/>

            <StackPanel Grid.Row="1">
                
                <RadioButton Content="Home"      
                             IsChecked="True"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding HomeViewCommand}"/>

                <RadioButton Content="Top rated movies"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding DiscoveryViewCommand}"/>

                <RadioButton Content="Watchlist"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Your ratings"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Your Lists"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Your reviews"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Your profile"
                             Style="{StaticResource MenuButtonTheme}"/>
                
                <RadioButton Content="Settings"
                             Style="{StaticResource MenuButtonTheme}"/>

            </StackPanel>

            <TextBox Width="250"
                     Height="40"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Grid.Column="1"
                     Style="{StaticResource ModernTextBox}"/>

            
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="5">

                <utils:HoverButton x:Name="BtnMinimize"
                                   Content="—"
                                   Style="{StaticResource WindowButton}"
                                   hoverColor="#4e4c5c"
                                   Click="MinimizeApp"/>

                <utils:HoverButton x:Name="BtnMaximize"
                                   Style="{StaticResource WindowButton}"
                                   Content="❐"
                                   hoverColor="#4e4c5c"
                                   Click="MaximizeApp"/>

                <utils:HoverButton x:Name="BtnExit"
                                   Style="{StaticResource WindowButton}"
                                   Content="X"
                                   hoverColor="Red"
                                   Click="CloseApp"/>
                
                
            </StackPanel>
            
            <ScrollViewer Grid.Column="1"
                           Grid.Row="1"
                           CanContentScroll="True">
                <ContentControl Margin="10"
                                Content="{Binding CurrentView}"/>
            </ScrollViewer>



        </Grid>

        

    </Border>
</Window>
