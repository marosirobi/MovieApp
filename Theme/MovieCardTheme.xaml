<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MovieApp.Utils">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Theme/WatchlistButtonTheme.xaml"/>
    </ResourceDictionary.MergedDictionaries>

                <DataTemplate x:Key="MovieCard">
                <Border Height="460"
                        Width="200"
                        CornerRadius="0,12,12,12"
                        Background="#1A1A1A"
                        Margin="0,0,5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="290"/>
                            <RowDefinition  Height="35"/>
                                <RowDefinition Height="70"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Margin="5,0,5,0">
                    <TextBlock Text="{Binding AverageRating}"
                                       FontWeight="SemiBold"
                                       Margin="5,5,0,0"
                                       FontSize="16"
                                       Foreground="White"/>

                            <TextBlock Text="⭐"
                                       FontWeight="SemiBold"
                                       Margin="5,5,0,0"
                                       FontSize="16"
                                       Foreground="yellow"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Vertical"
                                    Margin="5,0,5,0">

                    <TextBlock Text="{Binding PrimaryTitle}"
                                           TextWrapping="Wrap"
                                           TextTrimming="WordEllipsis"
                                           FontWeight="SemiBold"
                                           Margin="5,0,5,0"
                                           FontSize="16"
                                           Foreground="White">
                        <TextBlock.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                          Command="{Binding DataContext.ShowMovieDetailsCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                          CommandParameter="{Binding}"/>
                        </TextBlock.InputBindings>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                </StackPanel>

                        <StackPanel Grid.Row="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                        <local:HoverButton Content="Watchlist"
                                           bgColor="#2c2c2c"
                                           hoverColor="#30353c"
                                           x:Name="WatchlistBtn"                                       
                                           Style="{StaticResource buttonka}"/>

                                


                            </StackPanel>
                        
                            <Border CornerRadius="0,12,0,0">
                                <Border.Background>
                                    <ImageBrush Stretch="Fill" ImageSource="{Binding PrimaryImage}" x:Name="movieImage"/>
                                </Border.Background>
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding DataContext.ShowMovieDetailsCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                  CommandParameter="{Binding}"
                                    />
                                </Border.InputBindings>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            
                        
                    </Grid>

                </Border>
                </DataTemplate>
            

</ResourceDictionary>